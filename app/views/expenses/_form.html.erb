<div id="expense-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
        <div class="modal-body">
          <%= form_for @expense, remote: true do |f| %>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :transaction_type %>
              <%= f.select(:transaction_type, Expense.transaction_types.keys.map {|transaction| [transaction.titleize,transaction]}, {prompt: "Selecciona el tipo de transaccion"}, {class: "form-control"}) %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :date %>
              <%= f.date_field :date, class: "form-control" %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <%= f.label :concept %>
              <%= f.text_field :concept, class: "form-control" %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :category %>
              <%= f.select(:category, Expense.categories.keys.map {|category| [category.titleize,category]}, {prompt: "Selecciona la categoria"}, {class: "form-control"}) %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :amount %>
              <%= f.text_field :amount, class: "form-control" %>
            </div>
          </div>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
